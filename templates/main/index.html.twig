{% extends 'base.html.twig' %}

{% block title %}Liste des vols{% endblock %}

{% block body %}
    <h1 class="text-start">Liste des vols</h1>
    
    <a role="button" class="btn btn-info" href="#">S'identifier</a>
   
    <div class="form-group">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th scope="col">Numéro de vol</th>
                    <th scope="col">Ville de départ</th>
                    <th scope="col">Ville d'arrivée</th>
                    <th scope="col">Jour de départ</th>
                    <th scope="col">Heure de départ</th>
                    <th scope="col">Jour d'arrivée</th>
                    <th scope="col">Heure d'arrivée</th>
                    <th scope="col">Places</th>
                    <th scope="col">Prix</th>
                    <th scope="col">Réduction</th>
                </tr>
            </thead>
           
            <tbody>
                {% for flight in flights %}
                <tr>
                    <td>{{ flight.numFlight }}</td>
                    <td>{{ flight.cityStart }}</td>
                    <td>{{ flight.cityEnd }}</td>
                    <td>{{ flight.hourStart }}</td>
                    <td>{{ flight.hourStart }}</td>
                    <td>{{ flight.hourEnd }}</td>
                    <td>{{ flight.hourEnd }}</td>
                    <td>{{ flight.totalSeats }}</td>
                    <td>{{ flight.price }}</td>
                    <td>{{ flight.reduc }}</td>
                </tr>
                 {% endfor %}
            </tbody>
        </table>
       
    </div>
{% endblock %}