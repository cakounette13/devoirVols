{% extends 'base.html.twig' %}

{% block title %}Flights index{% endblock %}

{% block body %}
    <h1 class="text-center">Liste des vols - Administration</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Numéro de vol</th>
                <th>Ville de départ</th>
                <th>Ville d'arrivée</th>
                <th>Heure de départ</th>
                <th>Heure d'arrivée</th>
                <th>Places</th>
                <th>Prix</th>
                <th>Editer</th>
                <th>Supprimer</th>
            </tr>
        </thead>
        <tbody>
        {% for flight in flights %}
            <tr>
                <td>{{ flight.numFlight }}</td>
                <td>{{ flight.cityStart}}</td>
                <td>{{ flight.cityEnd }}</td>
                <td>{{ flight.hourStart ? flight.hourStart|date('d-m-Y') : '' }}</td>
                <td>{{ flight.hourEnd ? flight.hourEnd|date('d-m-Y') : '' }}</td>
                <td>{{ flight.totalSeats }}</td>
                <td>{{ flight.price }}</td>
                <td>   
                    <a href="{{ path('app_flights_edit', {'id': flight.id}) }}"><img src="/icones/editer.png" alt="modifier vol"></a>
                </td>
                <td>
                    <a href="{{ path('app_flights_delete', {'id': flight.id}) }}"><img src="/icones/supprimer.png" alt="supprimer vol"></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <div class="col-3 mx-auto">
        <a type="button" class="btn btn-success" href="{{ path('app_flights_new') }}">Ajouter un nouveau vol</a>
    </div>
{% endblock %}
